{
  "name": "niconizer",
  "version": "0.0.0-development",
  "description": "Desktop application that overlay comments on the screen directly.",
  "keywords": [
    "chat",
    "comment",
    "desktop",
    "electron",
    "gadget",
    "nicovideo"
  ],
  "repository": "github:matzkoh/niconizer",
  "license": "MIT",
  "main": "dist/app",
  "bin": {
    "niconizer": "dist/bin/index.js"
  },
  "files": [
    "dist/app",
    "dist/bin"
  ],
  "scripts": {
    "prebuild": "run-s lint clean:dist",
    "build": "run-p build:*",
    "build-base": "parcel build --no-source-maps --public-url .",
    "build:app": "npm run build-base -- -t electron src/app/index.ts -d dist/app",
    "build:bin": "npm run build-base -- -t node src/bin/index.ts -d dist/bin",
    "build:content": "npm run build-base -- -t browser src/content/index.html -d dist/app/content",
    "clean:dist": "rimraf dist",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext js,ts .",
    "lint:prettier": "prettier -l \"**/*.{html,json,md,yml}\"",
    "lint:stylelint": "stylelint \"**/*.{css,scss}\"",
    "lint:type": "tsc",
    "prepackage": "npm run build",
    "package": "run-p package:*",
    "postpackage": "ts-node script/postpackage",
    "package-base": "electron-packager . --overwrite --asar --ignore \"^/(?!dist(/app(/|$)|$)|node_modules(/|$)|package\\.json$)\" --out dist/package --download.cacheRoot .electron",
    "package:linux": "npm run package-base -- --platform linux --arch x64",
    "package:mac": "npm run package-base -- --platform darwin --arch x64",
    "package:win": "npm run package-base -- --platform win32 --arch x64",
    "prestart": "npm run build",
    "start": "electron .",
    "test": "npm run build"
  },
  "dependencies": {
    "electron": "11.2.3",
    "pkg-dir": "5.0.0",
    "ws": "7.4.3"
  },
  "devDependencies": {
    "@types/ws": "7.4.0",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "@wemake-services/stylelint-config-scss": "0.5.0",
    "electron-packager": "15.2.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-shebang": "1.3.2",
    "prettier": "2.2.1",
    "prettier-plugin-packagejson": "2.2.9",
    "rimraf": "3.0.2",
    "sass": "1.32.7",
    "stylelint": "13.9.0",
    "stylelint-config-recess-order": "2.3.0",
    "stylelint-config-strict-scss": "0.5.0",
    "ts-node": "9.1.1",
    "typescript": "4.1.4"
  },
  "engines": {
    "node": ">= 14",
    "npm": ">= 7"
  }
}
