{
  "name": "niconizer",
  "version": "0.0.0-development",
  "description": "Desktop application that overlay comments on the screen directly.",
  "keywords": [
    "chat",
    "comment",
    "desktop",
    "electron",
    "gadget",
    "nicovideo"
  ],
  "repository": "github:matzkoh/niconizer",
  "license": "MIT",
  "main": "dist/app",
  "bin": {
    "niconizer": "dist/bin/index.js"
  },
  "files": [
    "dist/app",
    "dist/bin"
  ],
  "scripts": {
    "prebuild": "run-s lint clean:dist",
    "build": "run-p build:*",
    "build-base": "parcel build --no-source-maps --public-url .",
    "build:app": "npm run build-base -- -t electron-main src/app/index.ts -d dist/app",
    "build:bin": "npm run build-base -- -t node src/bin/index.ts -d dist/bin",
    "build:content": "npm run build-base -- -t electron-renderer src/content/index.html -d dist/app/content",
    "clean:dist": "rimraf dist",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "postinstall": "husky install",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext js,ts .",
    "lint:prettier": "prettier -l \"**/*.{html,json,md,yml}\"",
    "lint:stylelint": "stylelint \"**/*.{css,scss}\"",
    "lint:type": "tsc",
    "prepackage": "npm run build",
    "package": "run-p package:*",
    "postpackage": "ts-node script/postpackage",
    "package-base": "electron-packager . --overwrite --asar --ignore \"^/(?!dist(/app(/|$)|$)|node_modules(/|$)|package\\.json$)\" --out dist/package --download.cacheRoot .electron",
    "package:linux": "npm run package-base -- --platform linux --arch x64",
    "package:mac": "npm run package-base -- --platform darwin --arch x64",
    "package:win": "npm run package-base -- --platform win32 --arch x64",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "start": "electron .",
    "test": "npm run build"
  },
  "dependencies": {
    "electron": "21.0.1",
    "pkg-dir": "5.0.0",
    "ws": "8.9.0"
  },
  "devDependencies": {
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "electron-packager": "16.0.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.4",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.5",
    "parcel-plugin-shebang": "1.4.0",
    "pinst": "3.0.0",
    "prettier": "2.8.0",
    "prettier-plugin-packagejson": "2.3.0",
    "rimraf": "3.0.2",
    "sass": "1.56.1",
    "stylelint": "14.15.0",
    "stylelint-config-recess-order": "3.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 7"
  }
}
