{
  "name": "niconizer",
  "version": "0.0.0-development",
  "description": "Desktop application that overlay comments on the screen directly.",
  "keywords": [
    "chat",
    "comment",
    "desktop",
    "electron",
    "gadget",
    "nicovideo"
  ],
  "homepage": "https://github.com/matzkoh/niconizer#readme",
  "bugs": {
    "url": "https://github.com/matzkoh/niconizer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matzkoh/niconizer.git"
  },
  "license": "MIT",
  "files": [
    "dist/app",
    "dist/bin"
  ],
  "main": "dist/app",
  "bin": {
    "niconizer": "dist/bin/index.js"
  },
  "scripts": {
    "prebuild": "run-s lint clean:dist",
    "build": "run-p build:*",
    "build-base": "parcel build --no-source-maps --public-url .",
    "build:app": "npm run build-base -- -t electron src/app/index.ts -d dist/app",
    "build:bin": "npm run build-base -- -t node src/bin/index.ts -d dist/bin",
    "build:content": "npm run build-base -- -t browser src/content/index.html -d dist/app/content",
    "clean:dist": "rimraf dist",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext js,ts .",
    "lint:prettier": "prettier -l \"**/*.{html,json,md,yml}\"",
    "lint:stylelint": "stylelint \"**/*.{css,scss}\"",
    "lint:type": "tsc",
    "prepackage": "npm run build",
    "package": "run-p package:*",
    "postpackage": "ts-node script/postpackage",
    "package-base": "electron-packager . --overwrite --asar --ignore \"^/(?!dist(/app(/|$)|$)|node_modules(/|$)|package\\.json$)\" --out dist/package --download.cacheRoot .electron",
    "package:linux": "npm run package-base -- --platform linux --arch x64",
    "package:mac": "npm run package-base -- --platform darwin --arch x64",
    "package:win": "npm run package-base -- --platform win32 --arch x64",
    "prestart": "npm run build",
    "start": "electron .",
    "test": "npm run build"
  },
  "dependencies": {
    "electron": "8.1.1",
    "pkg-dir": "4.2.0",
    "ws": "7.2.3"
  },
  "devDependencies": {
    "@types/pkg-up": "3.1.0",
    "@types/ws": "7.2.3",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "@wemake-services/stylelint-config-scss": "0.2.2",
    "electron-packager": "14.2.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-simple-import-sort": "5.0.2",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "npm-run-all": "4.1.5",
    "parcel": "1.12.4",
    "parcel-plugin-shebang": "1.2.8",
    "prettier": "1.19.1",
    "prettier-plugin-packagejson": "2.0.10",
    "rimraf": "3.0.2",
    "sass": "1.26.3",
    "semantic-release": "17.0.4",
    "stylelint": "13.2.1",
    "stylelint-config-recess-order": "2.0.4",
    "stylelint-config-strict-scss": "0.5.0",
    "ts-node": "8.8.1",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">= 10",
    "npm": ">= 6.4"
  }
}
